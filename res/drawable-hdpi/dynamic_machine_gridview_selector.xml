<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <gradient android:endColor="#CFCFCF" android:startColor="#CFCFCF" />

            <corners android:radius="4dp" />

            <stroke android:width="2dp" android:color="#5B5B5B" />

            <padding android:bottom="20dp" android:left="20dp" android:right="20dp" android:top="20dp" />
        </shape></item>
    <item android:state_pressed="false"><shape>
            <gradient android:endColor="#CDC9C9" android:startColor="#CDC9C9" />

            <corners android:radius="4dp" />

            <stroke android:width="2dp" android:color="#5B5B5B" />

            <padding android:bottom="20dp" android:left="20dp" android:right="20dp" android:top="20dp" />
        </shape></item>

</selector>